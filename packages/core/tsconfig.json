{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.ts",
  ]
}
